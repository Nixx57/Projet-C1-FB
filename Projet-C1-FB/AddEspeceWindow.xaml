<Window x:Class="Projet_C1_FB.AddEspeceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_C1_FB"
        mc:Ignorable="d"
        Title="AddEspeceWindow" Height="300" Width="600">
    <Grid>
        <TextBlock Margin="20,50,330,160" TextWrapping="Wrap" Text="Nom :" FontSize="36" TextAlignment="Center" FontWeight="Bold"/>
        <TextBlock Margin="20,160,330,50" TextWrapping="Wrap" Text="Nombre max autorisé à tuer par an :" FontSize="22" TextAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="nameBox" Margin="270,50,20,160" TextWrapping="Wrap" FontSize="36" TextAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <TextBox x:Name="nbMaxBox" Margin="270,160,20,50" TextWrapping="Wrap" FontSize="36" TextAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Button Content="OK" Margin="380,230,150,10" Click="Save"/>
        <Button Content="Annuler" Margin="150,230,385,10" Click="Cancel"/>

    </Grid>
</Window>
